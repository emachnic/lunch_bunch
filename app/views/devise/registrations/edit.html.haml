%hgroup
  %h2 Change your information
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %fieldset
    %dl
      %dt= f.label :name
      %dd= f.text_field :name

      %dt= f.label :email
      %dd= f.text_field :email

      %dt= f.label :password
      %dd
        = f.password_field :password
        %small (leave blank if you don't want to change it)

      %dt= f.label :password_confirmation
      %dd= f.password_field :password_confirmation
  %fieldset.actions
    %p= f.submit "Update"

= button_to "Cancel your account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, :class => "red button"

%br/

= link_to "Back", :back
